    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:vue/recommended"],
    "rules": {
     
      "node/no-missing-import": "error"
    },
    "env": {
      "browser": true,
      "es2021": true
    }
